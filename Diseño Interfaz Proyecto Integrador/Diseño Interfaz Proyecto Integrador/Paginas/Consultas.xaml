<Page
    x:Class="Diseño_Interfaz_Proyecto_Integrador.Consultas"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Diseño_Interfaz_Proyecto_Integrador"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ToolKit="using:MyToolkit.Controls"
    mc:Ignorable="d">
    <Page.BottomAppBar>
        <CommandBar>
            <CommandBar.Content>
                <Grid/>
            </CommandBar.Content>
            <AppBarButton x:Name="btnAltas" Icon="Add" Label="Altas" Click="btnAltas_Click"/>
            <AppBarButton x:Name="btnBajas" Icon="Delete" Label="Bajas" Click="btnBajas_Click"/>
            <AppBarButton x:Name="btnConsultas" Icon="Find" Label="Consultar" RenderTransformOrigin="0.574,0.479" Click="btnConsultas_Click"/>
            <AppBarButton x:Name="btnModificaciones" Icon="Setting" Label="Ajustes" Click="btnModificaciones_Click"/>
            <AppBarButton x:Name="btnAdministracion" Icon="People" Label="Admin" Click="btnAdministracion_Click" />
        </CommandBar>
    </Page.BottomAppBar>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="67*"/>
            <RowDefinition Height="58*"/>
            <RowDefinition Height="453*"/>
            <RowDefinition Height="62*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="215*"/>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="73*"/>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="28*"/>
            <ColumnDefinition Width="11*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="textBlock" Margin="0,0,12,0" TextWrapping="Wrap" FontSize="32" Text="Consultas" Height="57" VerticalAlignment="Top" Grid.Column="1"/>
        <TextBox x:Name="txtBuscar" TextWrapping="Wrap" Text="" Height="35" Grid.Column="1" Grid.Row="1" VerticalAlignment="Top" PlaceholderText="Escriba lo que desee buscar"/>
        <ComboBox x:Name="cboBuscarPor" HorizontalAlignment="Stretch" VerticalAlignment="Top" Grid.Column="3" Grid.Row="1" Height="35" PlaceholderText="Por">
            <ComboBoxItem>Todo</ComboBoxItem>
            <ComboBoxItem>ID Entrada</ComboBoxItem>
            <ComboBoxItem>Codigo de Producto</ComboBoxItem>
        </ComboBox>
        <ScrollViewer Grid.ColumnSpan="7" Grid.Row="2" HorizontalScrollMode="Enabled">
            <ToolKit:DataGrid x:Name="dgPersona" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="5" Width="342" HorizontalAlignment="Stretch">
                <ToolKit:DataGrid.Columns>
                    <ToolKit:DataGridTemplatedColumn Header="#" Width="50">
                        <ToolKit:DataGridTemplatedColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding NoEntrada}" Width="50" Foreground="Crimson" HorizontalAlignment="Left"/>
                            </DataTemplate>
                        </ToolKit:DataGridTemplatedColumn.CellTemplate>
                    </ToolKit:DataGridTemplatedColumn>
                    <ToolKit:DataGridTemplatedColumn Header="Codigo" Width="150">
                        <ToolKit:DataGridTemplatedColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Codigo}" Width="150" Foreground="Crimson" HorizontalAlignment="Left"/>
                            </DataTemplate>
                        </ToolKit:DataGridTemplatedColumn.CellTemplate>
                    </ToolKit:DataGridTemplatedColumn>
                    <ToolKit:DataGridTemplatedColumn Header="Estilo" Width="200">
                        <ToolKit:DataGridTemplatedColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Estilo}" Width="200" Foreground="Crimson" HorizontalAlignment="Left"/>
                            </DataTemplate>
                        </ToolKit:DataGridTemplatedColumn.CellTemplate>
                    </ToolKit:DataGridTemplatedColumn>
                    <ToolKit:DataGridTemplatedColumn Header="Cant" Width="100">
                        <ToolKit:DataGridTemplatedColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Cantidad}" Width="100" Foreground="Crimson" HorizontalAlignment="Left"/>
                            </DataTemplate>
                        </ToolKit:DataGridTemplatedColumn.CellTemplate>
                    </ToolKit:DataGridTemplatedColumn>
                    <ToolKit:DataGridTemplatedColumn Header="Categoria" Width="100">
                        <ToolKit:DataGridTemplatedColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Categoria}" Width="100" Foreground="Crimson" HorizontalAlignment="Left"/>
                            </DataTemplate>
                        </ToolKit:DataGridTemplatedColumn.CellTemplate>
                    </ToolKit:DataGridTemplatedColumn>
                    <ToolKit:DataGridTemplatedColumn Header="Fecha Entrada" Width="150">
                        <ToolKit:DataGridTemplatedColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding FechaEntrada}" Width="150" Foreground="Crimson" HorizontalAlignment="Left"/>
                            </DataTemplate>
                        </ToolKit:DataGridTemplatedColumn.CellTemplate>
                    </ToolKit:DataGridTemplatedColumn>
                    <ToolKit:DataGridTemplatedColumn Header="Imagen" Width="50">
                        <ToolKit:DataGridTemplatedColumn.CellTemplate>
                            <DataTemplate>
                                <Button Width="50" Background="Crimson" Foreground="White" HorizontalAlignment="Left">
                                    <Flyout>
                                        <Grid>
                                            <Image Source="{Binding Imagen}"/>
                                        </Grid>
                                    </Flyout>
                                </Button>
                            </DataTemplate>
                        </ToolKit:DataGridTemplatedColumn.CellTemplate>
                    </ToolKit:DataGridTemplatedColumn>
                </ToolKit:DataGrid.Columns>
            </ToolKit:DataGrid>
        </ScrollViewer>
        <Button x:Name="btnConsulta" Content="Buscar" Grid.Column="5" HorizontalAlignment="Stretch" Grid.Row="1" VerticalAlignment="Top" Height="35" Click="btnConsulta_Click"/>
    </Grid>
</Page>
