<Page
    x:Class="Diseño_Interfaz_Proyecto_Integrador.Consultas"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Diseño_Interfaz_Proyecto_Integrador"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ToolKit="using:MyToolkit.Controls"
    mc:Ignorable="d">
    <Page.BottomAppBar>
        <CommandBar>
            <CommandBar.Content>
                <Grid/>
            </CommandBar.Content>
            <AppBarButton x:Name="btnAltas" Icon="Add" Label="Altas" Click="btnAltas_Click"/>
            <AppBarButton x:Name="btnBajas" Icon="Delete" Label="Bajas" Click="btnBajas_Click"/>
            <AppBarButton x:Name="btnConsultas" Icon="Find" Label="Consultar" RenderTransformOrigin="0.574,0.479" Click="btnConsultas_Click"/>
            <AppBarButton x:Name="btnModificaciones" Icon="Edit" Label="Modificar" Click="btnModificaciones_Click"/>
            <AppBarButton x:Name="btnAdministracion" Icon="People" Label="Admin" Click="btnAdministracion_Click" />
        </CommandBar>
    </Page.BottomAppBar>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="16*"/>
            <RowDefinition Height="99*"/>
            <RowDefinition Height="14*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="177*"/>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="65*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="textBlock" Margin="10,0,102,0" TextWrapping="Wrap" FontSize="42" Text="Consultas" Grid.ColumnSpan="4" Height="65" VerticalAlignment="Top"/>
        <TextBox x:Name="txtBuscar" TextWrapping="Wrap" Text="" Height="35" Grid.Column="1" Grid.Row="1" VerticalAlignment="Top" PlaceholderText="Escriba lo que desee buscar" Margin="0,12,0,0"/>
        <ComboBox x:Name="cboBuscarPor" HorizontalAlignment="Stretch" VerticalAlignment="Top" Grid.Column="3" Grid.Row="1" Height="35" PlaceholderText="Por" Margin="0,12,0,0">
            <ComboBoxItem>Todo</ComboBoxItem>
            <ComboBoxItem>ID Entrada</ComboBoxItem>
            <ComboBoxItem>Codigo de Producto</ComboBoxItem>
        </ComboBox>
        <ToolKit:DataGrid x:Name="dgPersona" Margin="10,10,10,15" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="5" Width="Auto" HorizontalAlignment="Stretch"> 
            <ToolKit:DataGrid.Columns>
                <ToolKit:DataGridTemplatedColumn Header="#" Width="50">
                    <ToolKit:DataGridTemplatedColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding NoEntrada}" Width="50" Foreground="Crimson" HorizontalAlignment="Left"/>
                        </DataTemplate>
                    </ToolKit:DataGridTemplatedColumn.CellTemplate>
                </ToolKit:DataGridTemplatedColumn>
                <ToolKit:DataGridTemplatedColumn Header="Codigo" Width="150">
                    <ToolKit:DataGridTemplatedColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Codigo}" Width="150" Foreground="Crimson" HorizontalAlignment="Left"/>
                        </DataTemplate>
                    </ToolKit:DataGridTemplatedColumn.CellTemplate>
                </ToolKit:DataGridTemplatedColumn>
                <ToolKit:DataGridTemplatedColumn Header="Estilo" Width="200">
                    <ToolKit:DataGridTemplatedColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Estilo}" Width="200" Foreground="Crimson" HorizontalAlignment="Left"/>
                        </DataTemplate>
                    </ToolKit:DataGridTemplatedColumn.CellTemplate>
                </ToolKit:DataGridTemplatedColumn>
                <ToolKit:DataGridTemplatedColumn Header="Cant" Width="100">
                    <ToolKit:DataGridTemplatedColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Cantidad}" Width="100" Foreground="Crimson" HorizontalAlignment="Left"/>
                        </DataTemplate>
                    </ToolKit:DataGridTemplatedColumn.CellTemplate>
                </ToolKit:DataGridTemplatedColumn>
                <ToolKit:DataGridTemplatedColumn Header="Categoria" Width="100">
                    <ToolKit:DataGridTemplatedColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Categoria}" Width="100" Foreground="Crimson" HorizontalAlignment="Left"/>
                        </DataTemplate>
                    </ToolKit:DataGridTemplatedColumn.CellTemplate>
                </ToolKit:DataGridTemplatedColumn>
                <ToolKit:DataGridTemplatedColumn Header="Fecha Entrada" Width="150">
                    <ToolKit:DataGridTemplatedColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding FechaEntrada}" Width="150" Foreground="Crimson" HorizontalAlignment="Left"/>
                        </DataTemplate>
                    </ToolKit:DataGridTemplatedColumn.CellTemplate>
                </ToolKit:DataGridTemplatedColumn>
                <ToolKit:DataGridTemplatedColumn Header="Fecha Salida" Width="150">
                    <ToolKit:DataGridTemplatedColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding FechaSalida}" Width="150" Foreground="Crimson" HorizontalAlignment="Left"/>
                        </DataTemplate>
                    </ToolKit:DataGridTemplatedColumn.CellTemplate>
                </ToolKit:DataGridTemplatedColumn>
                <ToolKit:DataGridTemplatedColumn Header="Imagen" Width="50">
                    <ToolKit:DataGridTemplatedColumn.CellTemplate>
                        <DataTemplate>
                            <Button Width="50" Background="Crimson" Foreground="White" HorizontalAlignment="Left">
                                <Flyout>
                                    <Grid>
                                        <Image Source="{Binding Imagen}"/>
                                    </Grid>
                                </Flyout>
                            </Button>
                        </DataTemplate>
                    </ToolKit:DataGridTemplatedColumn.CellTemplate>
                </ToolKit:DataGridTemplatedColumn>
            </ToolKit:DataGrid.Columns>
        </ToolKit:DataGrid>
        <Button x:Name="btnConsulta" Content="Buscar" Grid.Column="5" HorizontalAlignment="Stretch" Margin="0,12,0,0" Grid.Row="1" VerticalAlignment="Top" Height="35" Click="btnConsulta_Click"/>
    </Grid>
</Page>
