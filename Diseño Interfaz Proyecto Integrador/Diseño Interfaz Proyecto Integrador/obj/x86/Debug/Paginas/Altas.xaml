<Page
    x:Class="Diseño_Interfaz_Proyecto_Integrador.Altas"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Diseño_Interfaz_Proyecto_Integrador"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.BottomAppBar>
        <CommandBar>
            <CommandBar.Content>
                <Grid/>
            </CommandBar.Content>
            <AppBarButton x:ConnectionId='1' x:Name="btnAltas" Icon="Add" Label="Altas"                       />
            <AppBarButton x:ConnectionId='2' x:Name="btnBajas" Icon="Delete" Label="Bajas"                       />
            <AppBarButton x:ConnectionId='3' x:Name="btnConsultas" Icon="Find" Label="Consultar" RenderTransformOrigin="0.574,0.479"                           />
            <AppBarButton x:ConnectionId='4' x:Name="btnModificaciones" Icon="Edit" Label="Modificar"                                />
            <AppBarButton x:ConnectionId='5' x:Name="btnAdministracion" Icon="People" Label="Admin"                                 />
        </CommandBar>
    </Page.BottomAppBar>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="58*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="71*"/>
            <RowDefinition Height="19*"/>
            <RowDefinition Height="13*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Altas" FontSize="32" Margin="0,10,0,0" Height="75" VerticalAlignment="Top" Grid.Column="1"/>
        <ScrollViewer Margin="5,5,5,10" Grid.Row="1" Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <local:AltasControl x:ConnectionId='7' x:Name="controlAltas"                              Height="255" VerticalAlignment="Top"/>
        </ScrollViewer>
        <Button x:ConnectionId='6' x:Name="btnSubir" Margin="0,0,10,6" HorizontalAlignment="Right"                        Content="Dar de Alta" Height="40" VerticalAlignment="Bottom" Width="150" Grid.Row="2" Grid.Column="1"/>
    </Grid>
</Page>

