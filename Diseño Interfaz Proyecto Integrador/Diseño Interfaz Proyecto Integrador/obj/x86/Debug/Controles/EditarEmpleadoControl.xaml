<UserControl
    x:Class="Diseño_Interfaz_Proyecto_Integrador.Controles.EditarEmpleadoControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Diseño_Interfaz_Proyecto_Integrador.Controles"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignWidth="400" Height="330">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="9*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="18*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox x:ConnectionId='1' x:Name="txtNombre" PlaceholderText="Nombre Completo" Margin="0,5,0,0" Grid.Column="1" Height="32" VerticalAlignment="Top" Grid.Row="3" />
        <TextBox x:ConnectionId='2' x:Name="txtContraseña" PlaceholderText="Contraseña" Grid.Column="1" Height="32" VerticalAlignment="Top" Grid.Row="5"/>
        <TextBox x:ConnectionId='3' x:Name="txtConfirmar" Height="32" PlaceholderText="Confirmar Contraseña" Grid.Column="1" VerticalAlignment="Top" Grid.Row="7"/>
        <ComboBox x:ConnectionId='4'  x:Name="cboEmpleados" Grid.Column="1" HorizontalAlignment="Stretch" Margin="0,1,0,0" Grid.Row="1" Grid.RowSpan="2"/>
        <ToggleSwitch x:ConnectionId='5' x:Name="switchLaborando" Grid.Column="1" OnContent="Laborando/Activo"  OffContent="Desactivo" HorizontalAlignment="Stretch" Margin="10,0" VerticalAlignment="Top" Foreground="#FF767676" Grid.Row="9" Height="40"/>
    </Grid>
</UserControl>

